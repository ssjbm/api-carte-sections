{
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.windowsEnableConpty": false,
    "terminal.integrated.env.windows": {
        "PATH": "${workspaceFolder}\\node_modules\\.bin;${env:PATH};${workspaceFolder}"
    },
    "terminal.integrated.env.osx": {
        "PATH": "${workspaceFolder}/node_modules/.bin:${env:PATH}:${workspaceFolder}"
    },
    "filewatcher.commands": [
        {
            "match": "src[/\\\\]scripts[/\\\\](?!.*\\.min\\.js$).*\\.js$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "build:js"],
            "event": "onFileChange"
        },
        {
            "match": "src[/\\\\]styles[/\\\\].*\\.scss$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "build:css"],
            "event": "onFileChange"
        },
    ],
    "liveServer.settings.port": 5505,
    "liveServer.settings.CustomBrowser": "chrome",
    "liveServer.settings.root": "./src/",
    "liveServer.settings.ignoreFiles": [
        ".vscode/**",
        ".github/**",
        "**/_**",
        "**/.git/**",
        "**/.vendor/**",
        "**/node_modules/**",
        "**/*.scss",
        "**/*.sass",
        "**/*.php",
        "**/*.ts",
        "**/!(*.min).js"
    ]
}